<h1>Masters</h1>

<p style="color: green"><%= notice %></p>

<% if can?(:create, Master) %>
  <%= link_to "New master", new_master_path %>
<% end %>

<table role="grid">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">E-mail</th>
      <th scope="col">Name</th>
      <th scope="col">NickName</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @masters.each_with_index do |master, index| %>
      <%= render partial: 'admin/masters/master', locals: { master: master, index: index } %>
    <% end %>
  </tbody>
</table>
