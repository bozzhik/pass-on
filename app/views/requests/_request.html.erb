<article id="<%= dom_id request %>">
  <p class="my-5">
    <%= link_to request.user.email, request.requester_link, target: "_blank" %>
  </p>

  <%= link_to request do %>
    <p class="my-5">
      <%= request.title %>
    </p>
  <% end %>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Description:</strong>
    <%= request.description %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">From Location:</strong>
    <%= request.from_location %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">To Location:</strong>
    <%= request.to_location %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">From Date:</strong>
    <%= request.from_date.strftime('%B %d') %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">To Date:</strong>
    <%= request.to_date.strftime('%B %d') %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Requester Link:</strong>
    <%= request.requester_link %>
  </p>

  <% if action_name != "show" %>
    <hr class="mt-6">
    <% if request.user == current_user %>
      <%= link_to "Edit this request", edit_request_path(request), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to "Destroy this request", request, method: :delete %>
    <% end %>
  <% end %>
</article>

