<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    
    <% if user_signed_in? %>
      <%= link_to "New Request", new_user_request_path(current_user) %>
    <% end %>
  </div>

  <div id="requests" class="min-w-full">
    <%= render @requests %>
  </div>
</div>
